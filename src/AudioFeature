#ifndef AudioFeature_H
#define AudioFeature_H
#include <arduinoFFT.h>
#include <math.h>


class AudioFeature{
    public:
        int Sample_rate;
        int stft_length;
        int stft_step;
        int nframes;
        int num_mel_bins;
        int upper_hz;
        int lower_hz;
        int nfft;
        int audio_length;
        float* audio;
        float* output_matrix;
        float** stft_matrix;
        ~AudioFeature();
        AudioFeature(int Sample_rate,int stft_length,int stft_step,int num_mel_bins, int audio_length,int lower_hz, int upper_hz);
        void compute();
    protected:
        void _stft();
        void _mel();
        void _generate_filter_bank();
        float *fft_r;
        float *fft_i;
        float **_filter_bank;
        int _audio_length;
};
#endif
